    <div class="row">
        <div class="col-md-4 fw-bold">{{ 'sylius.ui.email'|trans }} {{ 'sylius.ui.email'|trans }}</div>
        <div class="col-md-8">
            <a href="{{ path('sylius_admin_customer_show', {'id': customer.id}) }}">
