<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="sylius_mollie.state_machine.applicator.subscription_and_payment_id" class="Sylius\MolliePlugin\StateMachine\Applicator\SubscriptionAndPaymentIdApplicator">
            <argument type="service" id="sylius_mollie.client.mollie_api"/>
            <argument type="service" id="sylius_abstraction.state_machine"/>
        </service>
        <service id="Sylius\MolliePlugin\StateMachine\Applicator\SubscriptionAndPaymentIdApplicatorInterface" alias="sylius_mollie.state_machine.applicator.subscription_and_payment_id" />

        <service id="sylius_mollie.state_machine.applicator.subscription_and_sylius_payment" class="Sylius\MolliePlugin\StateMachine\Applicator\SubscriptionAndSyliusPaymentApplicator">
            <argument type="service" id="sylius_abstraction.state_machine"/>
        </service>
        <service id="Sylius\MolliePlugin\StateMachine\Applicator\SubscriptionAndSyliusPaymentApplicatorInterface" alias="sylius_mollie.state_machine.applicator.subscription_and_sylius_payment" />

        <service id="sylius_mollie.state_machine.order_set_status" class="Sylius\MolliePlugin\StateMachine\Applicator\MollieOrderStatesApplicator">
            <argument type="service" id="sylius_abstraction.state_machine"/>
            <argument type="service" id="sylius.repository.order"/>
        </service>
        <service id="Sylius\MolliePlugin\StateMachine\Applicator\MollieOrderStatesApplicatorInterface" alias="sylius_mollie.state_machine.order_set_status" />
    </services>
</container>
