<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="sylius_mollie.apple_pay.provider.apple_pay_direct" class="Sylius\MolliePlugin\ApplePay\Provider\ApplePayDirectProvider">
            <argument type="service" id="sylius_mollie.apple_pay.resolver.address"/>
            <argument type="service" id="sylius_mollie.apple_pay.provider.order_payment_apple_pay_direct"/>
            <argument type="service" id="sylius_mollie.provider.customer"/>
            <argument type="service" id="sylius_mollie.apple_pay.provider.apple_pay_direct_payment"/>
        </service>
        <service id="Sylius\MolliePlugin\ApplePay\Provider\ApplePayDirectProviderInterface" alias="sylius_mollie.apple_pay.provider.apple_pay_direct" />

        <service id="sylius_mollie.apple_pay.provider.order_payment_apple_pay_direct" class="Sylius\MolliePlugin\ApplePay\Provider\OrderPaymentApplePayDirectProvider">
            <argument type="service" id="sylius.custom_factory.payment"/>
            <argument type="service" id="sylius_abstraction.state_machine"/>
            <argument type="service" id="sylius.repository.payment_method"/>
            <argument type="service" id="sylius.repository.gateway_config"/>
            <argument type="service" id="sylius_mollie.payum.provider.payment_token"/>
            <argument type="service" id="payum"/>
        </service>
        <service id="Sylius\MolliePlugin\ApplePay\Provider\OrderPaymentApplePayDirectProviderInterface" alias="sylius_mollie.apple_pay.provider.order_payment_apple_pay_direct" />

        <service id="sylius_mollie.apple_pay.provider.apple_pay_direct_payment" class="Sylius\MolliePlugin\ApplePay\Provider\ApplePayDirectPaymentProvider">
            <argument type="service" id="sylius_mollie.apple_pay.resolver.apple_pay_direct_payment_type"/>
        </service>
        <service id="Sylius\MolliePlugin\ApplePay\Provider\ApplePayDirectPaymentProviderInterface" alias="sylius_mollie.apple_pay.provider.apple_pay_direct_payment" />
    </services>
</container>
