<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service
            id="sylius_mollie.calculator.calculate_tax_amount"
            class="Sylius\MolliePlugin\Calculator\CalculateTaxAmount"
            public="true"
        >
            <argument type="service" id="sylius_mollie.converter.int_to_string"/>
        </service>
        <service id="Sylius\MolliePlugin\Calculator\CalculateTaxAmountInterface" alias="sylius_mollie.calculator.calculate_tax_amount"/>

        <service
            id="sylius_mollie.calculator.payment_fee.fixed_amount"
            class="Sylius\MolliePlugin\Calculator\PaymentFee\FixedAmountCalculator"
        >
            <argument type="service" id="sylius.factory.adjustment" />
            <argument type="service" id="sylius_mollie.provider.divisor" />

            <tag name="sylius_mollie.payment_fee.calculator" />
        </service>

        <service
            id="sylius_mollie.calculator.payment_fee.percentage"
            class="Sylius\MolliePlugin\Calculator\PaymentFee\PercentageCalculator"
        >
            <argument type="service" id="sylius.factory.adjustment" />
            <argument type="service" id="sylius_mollie.provider.divisor" />

            <tag name="sylius_mollie.payment_fee.calculator" />
        </service>

        <service
            id="sylius_mollie.calculator.payment_fee.fixed_amount_and_percentage"
            class="Sylius\MolliePlugin\Calculator\PaymentFee\FixedAmountAndPercentageCalculator"
        >
            <argument type="service" id="sylius.factory.adjustment" />
            <argument type="service" id="sylius_mollie.calculator.payment_fee.percentage" />
            <argument type="service" id="sylius_mollie.calculator.payment_fee.fixed_amount" />
            <argument type="service" id="sylius_mollie.provider.divisor" />

            <tag name="sylius_mollie.payment_fee.calculator" />
        </service>

        <service
            id="sylius_mollie.calculator.payment_fee.no_fee"
            class="Sylius\MolliePlugin\Calculator\PaymentFee\NoFeeCalculator"
        >
            <tag name="sylius_mollie.payment_fee.calculator" />
        </service>

        <service
            id="sylius_mollie.calculator.payment_fee.composite"
            class="Sylius\MolliePlugin\Calculator\PaymentFee\CompositePaymentSurchargeCalculator"
        >
            <argument type="tagged_iterator" tag="sylius_mollie.payment_fee.calculator" />
        </service>

        <service
            id="Sylius\MolliePlugin\Calculator\PaymentFee\PaymentSurchargeCalculatorInterface"
            alias="sylius_mollie.calculator.payment_fee.composite"
        />

        <service
            id="sylius_mollie.calculator.clearer.payment_fee_adjustment"
            class="Sylius\MolliePlugin\Calculator\Clearer\PaymentFeeAdjustmentClearer"
        >
        </service>
        <service id="Sylius\MolliePlugin\Calculator\Clearer\PaymentFeeAdjustmentClearerInterface" alias="sylius_mollie.calculator.clearer.payment_fee_adjustment"/>
    </services>
</container>
