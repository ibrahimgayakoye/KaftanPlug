<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="sylius_mollie.listener.workflow.order_payment.refund_guard" class="Sylius\MolliePlugin\EventListener\Workflow\OrderPayment\RefundGuardListener">
            <argument type="service" id="sylius_mollie.refund.guard.order_payment_refund" />

            <tag name="kernel.event_listener" event="workflow.sylius_order_payment.guard.partially_refund" priority="0" />
            <tag name="kernel.event_listener" event="workflow.sylius_order_payment.guard.refund" priority="0" />
        </service>
    </services>
</container>
