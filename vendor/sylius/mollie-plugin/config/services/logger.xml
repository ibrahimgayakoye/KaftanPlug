<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="sylius_mollie.logger.mollie_logger_action" class="Sylius\MolliePlugin\Logger\MollieLoggerAction">
            <argument type="service" id="sylius_mollie.factory.mollie_logger"/>
            <argument type="service" id="sylius_mollie.repository.mollie_logger"/>
            <argument type="service" id="sylius.repository.gateway_config"/>
            <argument type="service" id="sylius_mollie.resolver.mollie_factory_name"/>
        </service>
        <service id="Sylius\MolliePlugin\Logger\MollieLoggerActionInterface" alias="sylius_mollie.logger.mollie_logger_action" />
    </services>
</container>
