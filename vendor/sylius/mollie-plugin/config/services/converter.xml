<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="sylius_mollie.converter.int_to_string" class="Sylius\MolliePlugin\Converter\IntToStringConverter">
            <argument type="service" id="sylius_mollie.provider.divisor"/>
        </service>
        <service id="Sylius\MolliePlugin\Converter\IntToStringConverterInterface" alias="sylius_mollie.converter.int_to_string" />

        <service id="sylius_mollie.converter.order" class="Sylius\MolliePlugin\Converter\OrderConverter">
            <argument type="service" id="sylius_mollie.converter.int_to_string"/>
            <argument type="service" id="sylius_mollie.calculator.calculate_tax_amount"/>
            <argument type="service" id="sylius_mollie.resolver.meal_voucher"/>
            <argument type="service" id="sylius.resolver.tax_rate"/>
            <argument type="service" id="sylius.matcher.zone"/>
            <argument type="service" id="request_stack"/>
        </service>
        <service id="Sylius\MolliePlugin\Converter\OrderConverterInterface" alias="sylius_mollie.converter.order" />

        <service id="sylius_mollie.converter.price_to_amount" class="Sylius\MolliePlugin\Converter\PriceToAmountConverter">
            <argument type="service" id="sylius.context.currency"/>
            <argument type="service" id="sylius.context.locale"/>
            <argument type="service" id="sylius.formatter.money"/>
        </service>
        <service id="Sylius\MolliePlugin\Converter\PriceToAmountConverterInterface" alias="sylius_mollie.converter.price_to_amount" />
    </services>
</container>
