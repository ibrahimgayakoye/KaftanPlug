<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <parameters>
        <parameter key="sylius_mollie.mollie_payment_methods_refresh_ttl">7200</parameter>
    </parameters>

    <services>
        <defaults public="true" />

        <service id="sylius_mollie.updater.mollie_payment_method_position" class="Sylius\MolliePlugin\Updater\MolliePaymentMethodPositionUpdater">
            <argument type="service" id="sylius_mollie.repository.mollie_gateway_config"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>
        <service id="Sylius\MolliePlugin\Updater\MolliePaymentMethodPositionUpdaterInterface" alias="sylius_mollie.updater.mollie_payment_method_position" />

        <service id="sylius_mollie.updater.mollie_methods" class="Sylius\MolliePlugin\Updater\MollieMethodsUpdater">
            <argument type="service" id="cache.app" />
            <argument type="service" id="sylius_mollie.provider.methods.mollie_methods" />
            <argument type="service" id="sylius_mollie.repository.mollie_gateway_config" />
            <argument type="service" id="sylius_mollie.factory.mollie_gateway_config" />
            <argument type="service" id="sylius_mollie.factory.methods" />
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%sylius_mollie.mollie_payment_methods_refresh_ttl%</argument>
        </service>
        <service id="Sylius\MolliePlugin\Updater\MollieMethodsUpdaterInterface" alias="sylius_mollie.updater.mollie_methods" />

        <service id="sylius_mollie.synchronizer.mollie_payment_methods" class="Sylius\MolliePlugin\Updater\MolliePaymentMethodsSynchronizer">
            <argument type="service" id="sylius.repository.payment_method"/>
            <argument type="service" id="sylius.context.channel" />
            <argument type="service" id="sylius_mollie.updater.mollie_methods" />
        </service>
        <service id="Sylius\MolliePlugin\Updater\MolliePaymentMethodsSynchronizerInterface" alias="sylius_mollie.synchronizer.mollie_payment_methods" />
    </services>
</container>
