<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="sylius_mollie.uploader.payment_method_logo" class="Sylius\MolliePlugin\Uploader\PaymentMethodLogoUploader" public="true">
            <argument type="service">
                <service class="Gaufrette\Filesystem">
                    <argument>%sylius.uploader.filesystem%</argument>
                    <factory service="knp_gaufrette.filesystem_map" method="get" />
                </service>
            </argument>
        </service>
        <service id="Sylius\MolliePlugin\Uploader\PaymentMethodLogoUploaderInterface" alias="sylius_mollie.uploader.payment_method_logo" />
    </services>
</container>
