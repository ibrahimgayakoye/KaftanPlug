{
    "name": "@symfony/ux-live-component",
    "description": "Live Component: bring server-side re-rendering & model binding to any element.",
    "license": "MIT",
    "version": "2.29.2",
    "keywords": [
        "symfony-ux",
        "twig",
        "components"
    ],
    "homepage": "https://ux.symfony.com/live-component",
    "repository": "https://github.com/symfony/ux-live-component",
    "type": "module",
    "files": [
        "dist"
    ],
    "main": "dist/live_controller.js",
    "types": "dist/live_controller.d.ts",
    "config": {
        "css_source": "src/live.css"
    },
    "scripts": {
        "build": "tsx ../../../bin/build_package.ts .",
        "watch": "tsx ../../../bin/build_package.ts . --watch",
        "test": "pnpm run test:unit && pnpm run test:browser",
        "test:unit": "../../../bin/test_package.sh . --unit",
        "test:browser": "../../../bin/test_package.sh . --browser",
        "check": "biome check",
        "ci": "biome ci"
    },
    "symfony": {
        "controllers": {
            "live": {
                "main": "dist/live_controller.js",
                "name": "live",
                "webpackMode": "eager",
                "fetch": "eager",
                "enabled": true,
                "autoimport": {
                    "@symfony/ux-live-component/dist/live.min.css": true
                }
            }
        },
        "importmap": {
            "@hotwired/stimulus": "^3.0.0",
            "@symfony/ux-live-component": "path:%PACKAGE%/dist/live_controller.js"
        }
    },
    "peerDependencies": {
        "@hotwired/stimulus": "^3.0.0"
    },
    "devDependencies": {
        "@hotwired/stimulus": "^3.0.0",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/user-event": "^13.1.9",
        "@types/node-fetch": "^2.6.13",
        "idiomorph": "^0.3.0",
        "jsdom": "^26.1.0",
        "node-fetch": "^2.6.1",
        "tslib": "^2.8.1",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3",
        "vitest": "^3.2.4"
    }
}
